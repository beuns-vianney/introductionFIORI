<mvc:View xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    controllerName="introtofiori.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">
    <Page id="page"
        title="{i18n>title}">
        <content >
            <form:SimpleForm title="Selection"
                layout="ColumnLayout"
                columnsL="3"
                columnsM="3"
                columnsXL="3">
                <form:content>
                    <core:Title text="Book">
                    </core:Title>
                    <Select items="{/books}"
                        forceSelection="false"
                        change="onBooksSelectChange">
                        <items>
                            <core:ListItem key="{id}"
                                text="{title}"></core:ListItem>
                        </items>
                    </Select>
                </form:content>

            </form:SimpleForm>
            <form:SimpleForm title="Details"
                layout="ColumnLayout"
                columnsXL="2">
                <form:content>
                    <core:Title text="Description" />
                        <Label text="Title" labelFor="titleInput"></Label>
                        <Input id="titleInput" enabled="false" value="{SelectedBook>/title}"></Input>
                        <Label text="Subtitle" labelFor="subtitleInput"></Label>
                        <Input id="subtitleInput" enabled="false" value="{SelectedBook>/subtitle}"></Input>
                        <Label text="Description" labelFor="descriptionText"></Label>
                        <Text id="descriptionText" text="{SelectedBook>/description}" />
                        <Label text="Author" labelFor="authorInput"></Label>
                        <Input id="authorInput" enabled="false" value="{SelectedBook>/author}"></Input>
                    <core:Title text="Data" />
                        <Label text="Publisher" labelFor="publisherText"></Label>
                        <Text id="publisherText" text="{SelectedBook>/publisher}" />
                        <Label text="Page count" labelFor="pageCountText"></Label>
                        <Text id="pageCountText" text="{SelectedBook>/pages}" />
                        <Label text="Links" labelFor="linksText"></Label>
                        <Link id="linksText" text="{SelectedBook>/website}" target="_blank" href="{SelectedBook>/website}" />
                </form:content>

            </form:SimpleForm>
        </content>
    </Page>
</mvc:View>
